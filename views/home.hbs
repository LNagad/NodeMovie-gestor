<main>
  <h1 class="fw-bold mb-3 text-center">Home page</h1>


  <div class="col-12 d-flex justify-content-between flex-wrap mt-2">
    <div class="col-lg-1 col-sm-1 ms-2 ">
      <h5>Filtrar por: </h5>
      <form action="/filter-movie" method="POST">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="MovieFilter" id="Accion" value="Accion">
          <label class="form-check-label" for="Accion">
            Accion
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="MovieFilter" id="Terror" value="Terror">
          <label class="form-check-label" for="Terror">
            Terror
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="MovieFilter" id="Comedia" value="Comedia">
          <label class="form-check-label" for="Comedia">
            Comedia
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="MovieFilter" id="Suspenso" value="Suspenso">
          <label class="form-check-label" for="Suspenso">
            Suspenso
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="MovieFilter" id="Documental" value="Documental">
          <label class="form-check-label" for="Documental">
            Documental
          </label>
        </div>
        <button class="btn btn-outline-warning mt-2 ms-4" type="submit">Filtrar</button>

      </form>

    </div>

    <div class="mt-2 col-lg-10 col-sm-10 col-xs-12 d-flex flex-wrap">
      
      {{#if hasMovie}}

      {{#each moviesList as |movie|}}
      <div class="col-lg-3 col-xs-12 me-2">
        <div class="card">
          <div class="movieStatus {{#if movie.status}}active{{else}}inactive{{/if}}">
            {{#if movie.status}} En cartelera{{else }}Fuera de cines{{/if}}
          </div>
          <img src="{{movie.imageUrl}}" class="card-img-top cardImages" alt="{{movie.name}}">
          <div class="card-body">
            <h5 class="card-title">{{movie.name}}</h5>
            <p class="card-text">Description: {{movie.description}}</p>
            <p class="card-text">Genero: {{movie.gender}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
      {{else}}
      <h4 class="text-center">No hay peliculas!</h4>
      {{/if}}
  </div>
</main>